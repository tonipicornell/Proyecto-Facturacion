<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.proyectofacturacion.DetalleCliente"
            prefHeight="500.0" prefWidth="600.0">

    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="50">

        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <columnConstraints>
                <ColumnConstraints minWidth="100" prefWidth="150" />
                <ColumnConstraints prefWidth="400" />
            </columnConstraints>

            <!-- Nombre -->
            <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="nombreField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <!-- CIF -->
            <Label text="CIF:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="cifField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <!-- Dirección -->
            <Label text="Dirección:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="direccionField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <!-- Código Postal -->
            <Label text="Código Postal:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="cpField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <!-- Población -->
            <Label text="Población:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="poblacionField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <!-- Provincia -->
            <Label text="Provincia:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <TextField fx:id="provinciaField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <!-- País -->
            <Label text="País:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <TextField fx:id="paisField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

            <!-- Teléfono -->
            <Label text="Teléfono:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
            <TextField fx:id="telField" GridPane.columnIndex="1" GridPane.rowIndex="7" />

            <!-- Email -->
            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="8" />

            <!-- IBAN -->
            <Label text="IBAN:" GridPane.columnIndex="0" GridPane.rowIndex="9" />
            <TextField fx:id="ibanField" GridPane.columnIndex="1" GridPane.rowIndex="9" />

            <!-- Riesgo -->
            <Label text="Riesgo:" GridPane.columnIndex="0" GridPane.rowIndex="10" />
            <TextField fx:id="riesgoField" GridPane.columnIndex="1" GridPane.rowIndex="10" />

            <!-- Descuento -->
            <Label text="Descuento:" GridPane.columnIndex="0" GridPane.rowIndex="11" />
            <TextField fx:id="descuentoField" GridPane.columnIndex="1" GridPane.rowIndex="11" />

            <!-- Observaciones -->
            <Label text="Observaciones:" GridPane.columnIndex="0" GridPane.rowIndex="12" />
            <TextArea fx:id="observacionesArea" GridPane.columnIndex="1" GridPane.rowIndex="12" prefHeight="100" />
        </GridPane>
    </VBox>

    <HBox spacing="10" alignment="CENTER_RIGHT" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <Button text="Guardar" fx:id="guardarButton" onAction="#guardarCliente" />
        <Button text="Cancelar" fx:id="cancelarButton" onAction="#cerrarVentana" />
    </HBox>

</AnchorPane>