<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proyectofacturacion.CrearFactura">
    <center>
        <ScrollPane fitToWidth="true" BorderPane.alignment="CENTER">
            <content>
                <VBox spacing="15.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>

                    <!-- Cabecera de la factura -->
                    <TitledPane animated="false" text="Datos de Factura">
                        <content>
                            <GridPane hgap="15.0" vgap="10.0">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" percentWidth="15.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" percentWidth="35.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" percentWidth="15.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" percentWidth="35.0" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </padding>
                                <children>
                                    <Label text="Número Factura:" />
                                    <TextField fx:id="txtNumeroFactura" editable="false" styleClass="text-field-right" GridPane.columnIndex="1" />
                                    <Label text="Fecha Factura:" GridPane.columnIndex="2" />
                                    <DatePicker fx:id="dateFechaFactura" GridPane.columnIndex="3" />

                                    <Label text="Forma de Pago:" GridPane.rowIndex="1" />
                                    <ComboBox fx:id="comboFormaPago" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    <Label text="Fecha Cobro:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                    <DatePicker fx:id="dateFechaCobro" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                                    <CheckBox fx:id="checkCobrada" mnemonicParsing="false" text="Cobrada" GridPane.rowIndex="2" />
                                </children>
                            </GridPane>
                        </content>
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </TitledPane>

                    <!-- Datos del cliente -->
                    <TitledPane animated="false" text="Datos del Cliente">
                        <content>
                            <GridPane hgap="15.0" vgap="10.0">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" percentWidth="15.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" percentWidth="35.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" percentWidth="15.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" percentWidth="35.0" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </padding>
                                <children>
                                    <Label text="Cliente:" />
                                    <ComboBox fx:id="comboClientes" prefWidth="150.0" GridPane.columnIndex="1" />
                                    <Label text="CIF/NIF:" GridPane.columnIndex="2" />
                                    <TextField fx:id="txtCIF" editable="false" GridPane.columnIndex="3" />

                                    <Label text="Dirección:" GridPane.rowIndex="1" />
                                    <TextField fx:id="txtDireccion" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    <Label text="Población:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                    <TextField fx:id="txtPoblacion" editable="false" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                                    <Label text="Provincia:" GridPane.rowIndex="2" />
                                    <TextField fx:id="txtProvincia" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    <Label text="País:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                                    <TextField fx:id="txtPais" editable="false" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                                </children>
                            </GridPane>
                        </content>
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </TitledPane>

                    <!-- Líneas de factura -->
                    <TitledPane animated="false" text="Líneas de Factura" VBox.vgrow="ALWAYS">
                        <content>
                            <VBox spacing="10.0">
                                <GridPane hgap="15.0" vgap="10.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" percentWidth="15.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" percentWidth="35.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" percentWidth="15.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" percentWidth="35.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                    <children>
                                        <Label text="Artículo:" />
                                        <ComboBox fx:id="comboArticulos" prefWidth="150.0" GridPane.columnIndex="1" />
                                        <Label text="Cantidad:" GridPane.columnIndex="2" />
                                        <TextField fx:id="txtCantidad" text="1" GridPane.columnIndex="3" />

                                        <Label text="Precio:" GridPane.rowIndex="1" />
                                        <TextField fx:id="txtPrecio" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <Label text="Descuento (%):" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                        <TextField fx:id="txtDescuento" text="0" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                                    </children>
                                </GridPane>

                                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                    <Button fx:id="btnAgregarLinea" mnemonicParsing="false" text="Agregar Línea" styleClass="button-primary" />
                                    <Button fx:id="btnEliminarLinea" mnemonicParsing="false" text="Eliminar Línea" styleClass="button-danger" />
                                </HBox>

                                <TableView fx:id="tablaLineasFactura" prefHeight="200.0" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="colCodigo" prefWidth="80.0" text="Código" />
                                        <TableColumn fx:id="colDescripcion" prefWidth="200.0" text="Descripción" />
                                        <TableColumn fx:id="colCantidad" prefWidth="75.0" text="Cantidad" />
                                        <TableColumn fx:id="colPrecio" prefWidth="75.0" text="Precio" />
                                        <TableColumn fx:id="colDescuento" prefWidth="75.0" text="Descuento" />
                                        <TableColumn fx:id="colIVA" prefWidth="75.0" text="IVA %" />
                                        <TableColumn fx:id="colImporte" prefWidth="100.0" text="Importe" />
                                    </columns>
                                </TableView>

                                <GridPane hgap="15.0" vgap="10.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" percentWidth="70.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" percentWidth="15.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" percentWidth="15.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Base Imponible:" GridPane.columnIndex="1" />
                                        <TextField fx:id="txtBaseImponible" editable="false" text="0.00" GridPane.columnIndex="2" />

                                        <Label text="Total IVA:" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <TextField fx:id="txtTotalIVA" editable="false" text="0.00" GridPane.columnIndex="2" GridPane.rowIndex="1" />

                                        <Label text="TOTAL FACTURA:" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                            <font>
                                                <Font name="System Bold" size="12.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txtTotalFactura" editable="false" text="0.00" styleClass="text-field-total" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                                    </children>
                                </GridPane>
                            </VBox>
                        </content>
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </TitledPane>

                    <!-- Observaciones -->
                    <TitledPane animated="false" text="Observaciones">
                        <content>
                            <VBox spacing="10.0">
                                <TextArea fx:id="txtObservaciones" prefHeight="100.0" promptText="Observaciones adicionales..." wrapText="true" />
                            </VBox>
                        </content>
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </TitledPane>

                    <!-- Botones de acción -->
                    <HBox alignment="CENTER_RIGHT" spacing="15.0">
                        <Button fx:id="btnGuardar" defaultButton="true" mnemonicParsing="false" text="Guardar Factura" styleClass="button-success">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnCancelar" mnemonicParsing="false" text="Cancelar" styleClass="button-secondary">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnImprimir" mnemonicParsing="false" text="Imprimir" styleClass="button-primary">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>