                <TableColumn fx:id="colFechaCobro" prefWidth="120.0" text="Fecha Cobro" />
                <TableColumn fx:id="colCobrada" prefWidth="120.0" text="Cobrada" />
                <TableColumn fx:id="colTotal" prefWidth="120.0" text="Total" />
            </columns>
            <BorderPane.margin>
