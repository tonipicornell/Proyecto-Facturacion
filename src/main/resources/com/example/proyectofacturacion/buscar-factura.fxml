<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.proyectofacturacion.BuscarFactura"
            prefHeight="700.0" prefWidth="1000.0">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <top>
        <VBox spacing="10">
            <HBox alignment="CENTER" spacing="20">
                <Label text="BUSCAR FACTURAS" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            </HBox>

            <TitledPane text="Filtros de búsqueda" collapsible="true">
                <GridPane hgap="10" vgap="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="80" prefWidth="120"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="200"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="80" prefWidth="120"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="200"/>
                    </columnConstraints>

                    <!-- Filtros: Número de factura -->
                    <Label text="Nº Factura:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="txtNumeroFactura" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <!-- Filtros: Fecha desde -->
                    <Label text="Fecha desde:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                    <DatePicker fx:id="dateDesde" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                    <!-- Filtros: Cliente -->
                    <Label text="Cliente:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <ComboBox fx:id="comboClientes" GridPane.columnIndex="1" GridPane.rowIndex="1" maxWidth="Infinity"/>

                    <!-- Filtros: Fecha hasta -->
                    <Label text="Fecha hasta:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    <DatePicker fx:id="dateHasta" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                    <!-- Filtros: Solo pendientes -->
                    <CheckBox fx:id="checkSoloPendientes" text="Solo facturas pendientes de cobro"
                              GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2"/>

                    <!-- Botones de acción para filtros -->
                    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.columnIndex="2" GridPane.rowIndex="2"
                          GridPane.columnSpan="2">
                        <Button fx:id="btnLimpiar" text="Limpiar filtros" minWidth="120"/>
                        <Button fx:id="btnBuscar" text="Buscar" minWidth="120" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    </HBox>
                </GridPane>
            </TitledPane>
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <TitledPane text="Facturas encontradas" collapsible="false" VBox.vgrow="ALWAYS">
                <TableView fx:id="tablaFacturas" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colNumero" text="Nº Factura" prefWidth="100"/>
                        <TableColumn fx:id="colFecha" text="Fecha" prefWidth="100"/>
                        <TableColumn fx:id="colCliente" text="Cliente" prefWidth="200"/>
                        <TableColumn fx:id="colFormaPago" text="Forma de Pago" prefWidth="150"/>
                        <TableColumn fx:id="colTotal" text="Total" prefWidth="100"/>
                        <TableColumn fx:id="colCobrada" text="Cobrada" prefWidth="80"/>
                        <TableColumn fx:id="colFechaCobro" text="Fecha Cobro" prefWidth="100"/>
                    </columns>
                </TableView>
            </TitledPane>

            <Button fx:id="btnVerDetalle" text="Ver detalle completo / Imprimir" maxWidth="Infinity"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        </VBox>
    </center>

    <bottom>
        <TitledPane text="Detalle de factura seleccionada" collapsible="true">
            <VBox spacing="10">
                <GridPane hgap="10" vgap="5">
                    <padding>
                        <Insets top="5" right="10" bottom="5" left="10"/>
                    </padding>

                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="120"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="180"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="120"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="180"/>
                    </columnConstraints>

                    <!-- Información básica de la factura -->
                    <Label text="Nº Factura:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                           style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblNumFactura" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Fecha:" GridPane.columnIndex="2" GridPane.rowIndex="0"
                           style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblFechaFactura" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                    <Label text="Cliente:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                           style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblCliente" GridPane.columnIndex="1" GridPane.rowIndex="1"
                           GridPane.columnSpan="3"/>

                    <Label text="Base Imponible:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                           style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblBaseImponible" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <Label text="IVA:" GridPane.columnIndex="2" GridPane.rowIndex="2"
                           style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblIVA" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                    <Label text="Total Factura:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                           style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblTotal" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                    <Label text="Forma de Pago:" GridPane.columnIndex="2" GridPane.rowIndex="3"
                           style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblFormaPago" GridPane.columnIndex="3" GridPane.rowIndex="3"/>

                    <Label text="Cobrada:" GridPane.columnIndex="0" GridPane.rowIndex="4"
                           style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblCobrada" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                    <Label text="Fecha Cobro:" GridPane.columnIndex="2" GridPane.rowIndex="4"
                           style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblFechaCobro" GridPane.columnIndex="3" GridPane.rowIndex="4"/>
                </GridPane>

                <TitledPane text="Observaciones">
                    <TextArea fx:id="txtObservaciones" prefHeight="60" editable="false"/>
                </TitledPane>

                <TitledPane text="Líneas de factura">
                    <TableView fx:id="tablaLineasFactura" prefHeight="150">
                        <columns>
                            <TableColumn fx:id="colCodigo" text="Código" prefWidth="100"/>
                            <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="250"/>
                            <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="80"/>
                            <TableColumn fx:id="colPrecio" text="Precio" prefWidth="80"/>
                            <TableColumn fx:id="colIVA" text="IVA %" prefWidth="80"/>
                            <TableColumn fx:id="colImporte" text="Importe" prefWidth="100"/>
                            <TableColumn fx:id="colProveedor" text="Proveedor" prefWidth="150"/>
                        </columns>
                    </TableView>
                </TitledPane>
            </VBox>
        </TitledPane>
    </bottom>
</BorderPane>