<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.proyectofacturacion.BuscarFactura">
    <children>
        <!-- Título -->
        <Label text="Gestión de Facturas" layoutX="20" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <!-- Barra de búsqueda -->
        <HBox layoutX="20" layoutY="50" spacing="10">
            <Label text="Buscar:" style="-fx-font-weight: bold;">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <TextField fx:id="searchField" promptText="Ingrese Nº Factura, Cliente o Fecha" prefWidth="300" onKeyReleased="#handleSearch"/>
            <ComboBox fx:id="searchTypeCombo" prefWidth="120"/>
            <Button text="Buscar" fx:id="searchButton" onAction="#handleSearchButton" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button text="Limpiar" fx:id="clearButton" onAction="#handleClearSearch" style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
        </HBox>

        <!-- Tabla de facturas -->
        <TableView fx:id="tablaFacturas" layoutX="20" layoutY="100" prefWidth="750" prefHeight="300">
            <columns>
                <TableColumn fx:id="colNumeroFactura" text="Nº Factura" prefWidth="120"/>
                <TableColumn fx:id="colCliente" text="Cliente" prefWidth="250"/>
                <TableColumn fx:id="colFechaCobro" text="Fecha Cobro" prefWidth="120"/>
                <TableColumn fx:id="colCobrada" text="Cobrada" prefWidth="120"/>
                <TableColumn fx:id="colTotal" text="Total" prefWidth="120"/>
            </columns>
        </TableView>

        <!-- Botón para ver detalle de factura -->
        <Button fx:id="verDetalleButton" text="Ver Detalle" layoutX="650" layoutY="420"
                onAction="#handleVerDetalle"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;" />
    </children>
</AnchorPane>