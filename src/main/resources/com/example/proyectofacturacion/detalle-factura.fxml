<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.proyectofacturacion.DetalleFactura"
            prefHeight="700.0" prefWidth="900.0">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <top>
        <VBox spacing="10">
            <HBox alignment="CENTER">
                <Label text="DETALLE DE FACTURA" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Datos de Factura -->
            <GridPane hgap="10" vgap="5">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="120"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="200"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="120"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="200"/>
                </columnConstraints>

                <Label text="Nº Factura:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="txtNumeroFactura" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Fecha Factura:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <TextField fx:id="txtFechaFactura" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                <Label text="Forma de Pago:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="txtFormaPago" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Fecha Cobro:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <TextField fx:id="txtFechaCobro" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                <CheckBox fx:id="checkCobrada" text="Cobrada" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            </GridPane>

            <!-- Datos del Cliente -->
            <TitledPane text="Datos del Cliente" expanded="true">
                <GridPane hgap="10" vgap="5">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="120"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="200"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="120"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="200"/>
                    </columnConstraints>

                    <Label text="Cliente:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="txtCliente" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="3"/>

                    <Label text="Dirección:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtDireccion" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="3"/>

                    <Label text="CIF:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtCIF" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <Label text="Población:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtPoblacion" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                    <Label text="Provincia:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <TextField fx:id="txtProvincia" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                    <Label text="País:" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                    <TextField fx:id="txtPais" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
                </GridPane>
            </TitledPane>
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <TitledPane text="Líneas de Factura" expanded="true" VBox.vgrow="ALWAYS">
                <TableView fx:id="tablaLineasFactura" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colCodigo" text="Código" prefWidth="100"/>
                        <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="250"/>
                        <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="75"/>
                        <TableColumn fx:id="colPrecio" text="Precio" prefWidth="75"/>
                        <TableColumn fx:id="colDescuento" text="Descuento %" prefWidth="90"/>
                        <TableColumn fx:id="colImporte" text="Importe" prefWidth="100"/>
                        <TableColumn fx:id="colIVA" text="IVA %" prefWidth="75"/>
                    </columns>
                </TableView>
            </TitledPane>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10">
            <!-- Observaciones -->
            <TitledPane text="Observaciones" expanded="true">
                <TextArea fx:id="txtObservaciones" wrapText="true" prefHeight="60"/>
            </TitledPane>

            <!-- Totales -->
            <GridPane hgap="10" vgap="5" alignment="CENTER_RIGHT">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" halignment="RIGHT" minWidth="150" prefWidth="150"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150"/>
                </columnConstraints>

                <Label text="Base Imponible:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="txtBaseImponible" alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Total IVA:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="txtTotalIVA" alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Total Factura:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold"/>
                <TextField fx:id="txtTotalFactura" alignment="CENTER_RIGHT" style="-fx-font-weight: bold" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </GridPane>

            <!-- Botones -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="btnImprimir" text="Imprimir Factura" onAction="#imprimirFactura"/>
                <Button fx:id="btnVolver" text="Volver" onAction="#volverAtras"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>